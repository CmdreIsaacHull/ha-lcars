  <<: *lcars-colors
  <<: *base
  <<: *card-mod-css
  lcars-ui-primary: var(--lcars-gold)
  lcars-ui-secondary: var(--lcars-butter)
  lcars-ui-tertiary: var(--lcars-orange)
